<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ActivitySensorHumidity">

    <ImageView
        android:id="@+id/ring_s"
        android:layout_width="235dp"
        android:layout_height="241dp"
        android:layout_marginTop="36dp"
        app:layout_constraintEnd_toEndOf="@+id/title_s3"
        app:layout_constraintStart_toStartOf="@+id/title_s3"
        app:layout_constraintTop_toBottomOf="@+id/title_s3"
        app:srcCompat="@drawable/ring_m" />

    <TextView
        android:id="@+id/textview_valor_s3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/blank_number"
        android:textSize="96sp"
        app:layout_constraintBottom_toBottomOf="@+id/ring_s"
        app:layout_constraintEnd_toEndOf="@+id/ring_s"
        app:layout_constraintStart_toStartOf="@+id/ring_s"
        app:layout_constraintTop_toTopOf="@+id/ring_s" />

    <Button
        android:id="@+id/medir_s"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="64dp"
        android:onClick="mostraVal3"
        android:text="@string/button_measure"
        app:layout_constraintEnd_toEndOf="@+id/ring_s"
        app:layout_constraintHorizontal_bias="0.496"
        app:layout_constraintStart_toStartOf="@+id/ring_s"
        app:layout_constraintTop_toBottomOf="@+id/ring_s" />

    <TextView
        android:id="@+id/descr_val_s"
        android:layout_width="358dp"
        android:layout_height="197dp"
        android:layout_marginTop="44dp"
        android:text="TextView"
        app:layout_constraintEnd_toEndOf="@+id/medir_s"
        app:layout_constraintHorizontal_bias="0.494"
        app:layout_constraintStart_toStartOf="@+id/medir_s"
        app:layout_constraintTop_toBottomOf="@+id/medir_s" />

    <TextView
        android:id="@+id/title_s3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:text="@string/humidity_title"
        android:textSize="24sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>